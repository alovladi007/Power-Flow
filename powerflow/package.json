{
  "name": "@powerflow/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "concurrently \"pnpm start:api\" \"pnpm start:web\"",
    "start:api": "pnpm --filter @powerflow/api start",
    "start:web": "pnpm --filter @powerflow/web start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "db:migrate": "pnpm --filter @powerflow/database migrate",
    "db:seed": "pnpm --filter @powerflow/database seed",
    "docker:up": "docker-compose up",
    "docker:build": "docker-compose build",
    "dev:web": "pnpm --filter @powerflow/web dev",
    "dev:api": "pnpm --filter @powerflow/api dev",
    "dev:all": "concurrently \"pnpm dev:api\" \"pnpm dev:web\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}